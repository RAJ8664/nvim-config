          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1769244334/Screenshot_24-Jan_14-15-12_31224_a1kvox.png" alt="Neovim Screenshot 2" class="carousel-image-hero" />
          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1769244237/Screenshot_24-Jan_14-13-18_10553_ndublr.png" alt="Neovim Screenshot 3" class="carousel-image-hero" />
          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1763200070/Screenshot_15-Nov_14-39-25_21943_gg9o2o.png" alt="Neovim Screenshot 4" class="carousel-image-hero" />
          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1763200070/Screenshot_15-Nov_14-41-29_3208_nmx481.png" alt="Neovim Screenshot 5" class="carousel-image-hero" />
          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1769243670/Screenshot_24-Jan_13-57-02_28640_qv76js.png" alt="Neovim Screenshot 6" class="carousel-image-hero" />
          </div>
          <div class="carousel-slide-hero">
            <img src="https://res.cloudinary.com/dzgoq3ikq/image/upload/v1763200070/Screenshot_15-Nov_14-42-00_11230_zvjtp8.png" alt="Neovim Screenshot 7" class="carousel-image-hero" />
          </div>
        </div>
        
        <!-- Carousel Navigation Dots -->
        <div class="carousel-dots-hero" id="heroCarouselDots"></div>

        <!-- Control Buttons -->
        <button class="carousel-btn-hero carousel-btn-prev" id="heroPrevBtn" aria-label="Previous slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
        </button>
        <button class="carousel-btn-hero carousel-btn-next" id="heroNextBtn" aria-label="Next slide">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </button>

        <!-- Slide Counter -->
        <div class="carousel-counter-hero" id="heroCounter">1 / 7</div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    background: var(--ctp-base);
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(203, 166, 247, 0.2) 0%, transparent 40%),
      radial-gradient(circle at 80% 80%, rgba(180, 190, 254, 0.2) 0%, transparent 40%),
      radial-gradient(circle at 40% 20%, rgba(245, 194, 231, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 60% 70%, rgba(148, 226, 213, 0.15) 0%, transparent 40%);
    pointer-events: none;
    z-index: 0;
    animation: backgroundPulse 8s ease-in-out infinite;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      linear-gradient(45deg, transparent 30%, rgba(203, 166, 247, 0.03) 50%, transparent 70%);
    background-size: 200% 200%;
    animation: gradientMove 15s ease infinite;
    pointer-events: none;
    z-index: 0;
  }

  .hero-content {
    max-width: 100%;
    width: 100%;
    height: 100vh;
    display: grid;
    grid-template-columns: 450px 1fr;
    gap: 2rem;
    align-items: center;
    position: relative;
    z-index: 1;
    padding: 0;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    padding: 2rem 2rem 2rem 4rem;
    height: 100%;
    justify-content: center;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.6rem 1.25rem;
    background: linear-gradient(135deg, rgba(203, 166, 247, 0.15), rgba(180, 190, 254, 0.15));
    border: 1px solid rgba(203, 166, 247, 0.4);
    border-radius: 2rem;
    color: var(--ctp-mauve);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    width: fit-content;
    box-shadow: 0 4px 15px rgba(203, 166, 247, 0.1);
  }

  .hero-badge:hover {
    background: linear-gradient(135deg, rgba(203, 166, 247, 0.25), rgba(180, 190, 254, 0.25));
    border-color: rgba(203, 166, 247, 0.6);
    box-shadow: 0 6px 20px rgba(203, 166, 247, 0.3);
    transform: translateY(-2px) scale(1.02);
  }

  .hero-title {
    font-family: 'Roboto', sans-serif;
    font-size: 3.8rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    color: var(--ctp-text);
    text-shadow: 0 0 40px rgba(203, 166, 247, 0.2);
  }

  .gradient-text {
    background: linear-gradient(45deg, var(--ctp-mauve), var(--ctp-pink), var(--ctp-sky), var(--ctp-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 300% auto;
    animation: gradientFlow 4s ease infinite;
    filter: drop-shadow(0 0 20px rgba(203, 166, 247, 0.3));
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--ctp-subtext1);
    margin-bottom: 2.5rem;
    line-height: 1.8;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1.05rem;
    position: relative;
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--ctp-mauve), var(--ctp-lavender));
    color: var(--ctp-crust);
    box-shadow: 0 4px 15px rgba(203, 166, 247, 0.3);
    border: none;
    z-index: 1;
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: -100%;
    left: -100%;
    width: 300%;
    height: 300%;
    background: linear-gradient(
      -45deg,
      transparent 0%,
      transparent 35%,
      rgba(255, 255, 255, 0.1) 45%,
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0.1) 55%,
      transparent 65%,
      transparent 100%
    );
    filter: blur(1px);
    animation: diagonalShine 3s linear infinite;
    z-index: 1;
  }

  .btn-primary:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(203, 166, 247, 0.5);
  }

  .btn-primary:active {
    transform: translateY(0) scale(0.98);
  }

  .btn-secondary {
    background: var(--ctp-surface0);
    color: var(--ctp-lavender);
    border: 1px solid var(--ctp-lavender);
    box-shadow: 0 4px 15px rgba(180, 190, 254, 0.2);
  }

  .btn-secondary:hover {
    background: var(--ctp-surface1);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(180, 190, 254, 0.3);
  }

  .btn-secondary:active {
    transform: translateY(0) scale(0.98);
  }

  /* Hero Carousel */
  .hero-carousel {
    position: relative;
    width: 100%;
    height: 100vh;
    padding: 0;
  }

  .carousel-wrapper-hero {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 0;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(30, 30, 46, 0.95), rgba(24, 24, 37, 0.95));
    box-shadow: 
      inset 4px 0 20px rgba(203, 166, 247, 0.15),
      inset 0 0 60px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px) saturate(180%);
    transition: all 0.4s ease;
    border-left: 2px solid rgba(203, 166, 247, 0.3);
    position: relative;
  }

  .carousel-wrapper-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(90deg, rgba(203, 166, 247, 0.05) 0%, transparent 50%);
    pointer-events: none;
    z-index: 1;
  }

  .carousel-wrapper-hero:hover {
    box-shadow: 
      inset 4px 0 30px rgba(203, 166, 247, 0.25),
      inset 0 0 80px rgba(0, 0, 0, 0.4);
    border-left-color: rgba(203, 166, 247, 0.5);
  }

  .carousel-track-hero {
    display: flex;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }

  .carousel-slide-hero {
    min-width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    position: relative;
    z-index: 2;
  }

  .carousel-image-hero {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s ease, filter 0.4s ease;
    padding: 3rem;
    filter: brightness(0.95) contrast(1.05);
  }

  .carousel-slide-hero:hover .carousel-image-hero {
    transform: scale(1.005);
    filter: brightness(1) contrast(1.1);
  }

  /* Carousel Navigation Dots */
  .carousel-dots-hero {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 10;
    background: rgba(30, 30, 46, 0.9);
    padding: 14px 28px;
    border-radius: 35px;
    backdrop-filter: blur(12px) saturate(180%);
    border: 2px solid rgba(203, 166, 247, 0.4);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5), 0 0 20px rgba(203, 166, 247, 0.2);
  }

  .carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--ctp-surface2);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
    position: relative;
  }

  .carousel-dot::after {
    content: '';
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    background: transparent;
    transition: background 0.3s ease;
  }

  .carousel-dot:hover {
    background: var(--ctp-overlay1);
    transform: scale(1.4);
  }

  .carousel-dot:hover::after {
    background: rgba(203, 166, 247, 0.25);
  }

  .carousel-dot.active {
    background: linear-gradient(135deg, var(--ctp-mauve), var(--ctp-pink), var(--ctp-lavender));
    width: 30px;
    border-radius: 5px;
    box-shadow: 0 2px 12px rgba(203, 166, 247, 0.7), 0 0 20px rgba(203, 166, 247, 0.4);
  }

  /* Control Buttons */
  .carousel-btn-hero {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(30, 30, 46, 0.9);
    border: 2px solid rgba(203, 166, 247, 0.4);
    color: var(--ctp-lavender);
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(12px) saturate(180%);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 0 0 4px rgba(203, 166, 247, 0.1);
  }

  .carousel-btn-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--ctp-mauve), var(--ctp-pink), var(--ctp-lavender));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .carousel-btn-hero svg {
    position: relative;
    z-index: 1;
    transition: transform 0.3s ease;
  }

  .carousel-btn-hero:hover {
    border-color: rgba(203, 166, 247, 0.8);
    box-shadow: 0 8px 30px rgba(203, 166, 247, 0.5), 0 0 0 4px rgba(203, 166, 247, 0.2);
    transform: translateY(-50%) scale(1.15);
  }

  .carousel-btn-hero:hover::before {
    opacity: 1;
  }

  .carousel-btn-hero:hover svg {
    transform: scale(1.2);
    filter: drop-shadow(0 0 10px rgba(203, 166, 247, 0.9));
  }

  .carousel-btn-hero:hover {
    color: var(--ctp-crust);
  }

  .carousel-btn-hero:active {
    transform: translateY(-50%) scale(1.05);
  }

  .carousel-btn-prev {
    left: 30px;
  }

  .carousel-btn-next {
    right: 30px;
  }

  /* Slide Counter */
  .carousel-counter-hero {
    position: absolute;
    top: 30px;
    right: 30px;
    background: rgba(30, 30, 46, 0.9);
    padding: 10px 20px;
    border-radius: 25px;
    color: var(--ctp-text);
    font-size: 0.95rem;
    font-weight: 700;
    z-index: 10;
    backdrop-filter: blur(12px) saturate(180%);
    border: 2px solid rgba(203, 166, 247, 0.4);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 0 20px rgba(203, 166, 247, 0.2);
    font-family: 'Fira Code', monospace;
    letter-spacing: 0.5px;
  }

  /* Animations */
  @keyframes diagonalShine {
    0% {
      transform: translateX(-300%) translateY(-300%);
    }
    100% {
      transform: translateX(300%) translateY(300%);
    }
  }

  @keyframes gradientFlow {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes backgroundPulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
    100% {
      background-position: 0% 0%;
    }
  }

  /* Auto-scroll animation */
  @keyframes autoScroll {
    0%, 20% {
      transform: translateX(0%);
    }
    25%, 45% {
      transform: translateX(-100%);
    }
    50%, 70% {
      transform: translateX(-200%);
    }
    75%, 95% {
      transform: translateX(-300%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      grid-template-rows: auto 1fr;
      height: auto;
      min-height: 100vh;
      gap: 0;
    }

    .hero-text {
      padding: 2rem;
      height: auto;
    }

    .hero-title {
      font-size: 2.8rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-carousel {
      height: 60vh;
      min-height: 400px;
    }

    .carousel-wrapper-hero {
      border-left: none;
      border-top: 2px solid rgba(203, 166, 247, 0.3);
      border-radius: 0;
    }

    .carousel-wrapper-hero::before {
      background: linear-gradient(180deg, rgba(203, 166, 247, 0.05) 0%, transparent 50%);
    }

    .carousel-btn-hero {
      width: 48px;
      height: 48px;
    }

    .carousel-btn-prev {
      left: 20px;
    }

    .carousel-btn-next {
      right: 20px;
    }

    .carousel-counter-hero {
      top: 20px;
      right: 20px;
      font-size: 0.85rem;
      padding: 8px 16px;
    }

    .carousel-image-hero {
      padding: 2rem;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 1rem;
    }

    .hero-text {
      padding: 1.5rem;
    }

    .hero-title {
      font-size: 2.2rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .btn {
      justify-content: center;
      width: 100%;
    }

    .hero-carousel {
      height: 50vh;
      min-height: 350px;
    }

    .carousel-btn-hero {
      width: 42px;
      height: 42px;
    }

    .carousel-btn-prev {
      left: 15px;
    }

    .carousel-btn-next {
      right: 15px;
    }

    .carousel-dots-hero {
      padding: 10px 20px;
      gap: 10px;
      bottom: 20px;
    }

    .carousel-dot {
      width: 8px;
      height: 8px;
    }

    .carousel-dot.active {
      width: 22px;
    }

    .carousel-counter-hero {
      top: 15px;
      right: 15px;
      font-size: 0.8rem;
      padding: 6px 12px;
    }

    .carousel-image-hero {
      padding: 1.5rem;
    }
  }

  /* Light Theme Support */
  :root[data-theme='light'] .hero {
    background: var(--ctp-base);
  }

  :root[data-theme='light'] .hero-badge {
    background: rgba(136, 57, 239, 0.1);
    border-color: rgba(136, 57, 239, 0.3);
  }

  :root[data-theme='light'] .gradient-text {
    background: linear-gradient(45deg, var(--ctp-mauve), var(--ctp-peach), var(--ctp-maroon), var(--ctp-lavender));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  :root[data-theme='light'] .carousel-wrapper-hero {
    background: rgba(220, 224, 232, 0.6);
  }

  :root[data-theme='light'] .carousel-slide-hero {
    background: var(--ctp-mantle);
  }

  :root[data-theme='light'] .carousel-dots-hero {
    background: rgba(239, 241, 245, 0.8);
    border-color: rgba(136, 57, 239, 0.2);
  }
</style>

<script>
  // Hero Carousel Script
  const heroTrack = document.getElementById('heroCarouselTrack');
  const heroDotsContainer = document.getElementById('heroCarouselDots');
  const heroSlides = document.querySelectorAll('.carousel-slide-hero');
  const heroPrevBtn = document.getElementById('heroPrevBtn');
  const heroNextBtn = document.getElementById('heroNextBtn');
  const heroCounter = document.getElementById('heroCounter');
  const totalHeroSlides = heroSlides.length;
  let currentHeroSlide = 0;
  let heroAutoScrollInterval: number;

  // Create dots
  for (let i = 0; i < totalHeroSlides; i++) {
    const dot = document.createElement('button');
    dot.className = 'carousel-dot';
    dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
    if (i === 0) dot.classList.add('active');
    dot.addEventListener('click', () => {
      goToHeroSlide(i);
      resetAutoScroll();
    });
    heroDotsContainer.appendChild(dot);
  }

  const heroDots = document.querySelectorAll('.carousel-dot');

  function updateHeroCarousel() {
    heroTrack.style.transform = `translateX(-${currentHeroSlide * 100}%)`;
    heroCounter.textContent = `${currentHeroSlide + 1} / ${totalHeroSlides}`;
    
    heroDots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentHeroSlide);
    });
  }

  function goToHeroSlide(index: number) {
    currentHeroSlide = index;
    updateHeroCarousel();
  }

  function nextHeroSlide() {
    currentHeroSlide = (currentHeroSlide + 1) % totalHeroSlides;
    updateHeroCarousel();
  }

  function prevHeroSlide() {
    currentHeroSlide = (currentHeroSlide - 1 + totalHeroSlides) % totalHeroSlides;
    updateHeroCarousel();
  }

  // Button event listeners
  heroNextBtn?.addEventListener('click', () => {
    nextHeroSlide();
    resetAutoScroll();
  });

  heroPrevBtn?.addEventListener('click', () => {
    prevHeroSlide();
    resetAutoScroll();
  });

  // Auto-scroll functionality
  function startAutoScroll() {
    heroAutoScrollInterval = setInterval(nextHeroSlide, 4000);
  }

  function resetAutoScroll() {
    clearInterval(heroAutoScrollInterval);
    startAutoScroll();
  }

  // Pause on hover
  const carouselWrapper = document.querySelector('.carousel-wrapper-hero');
  if (carouselWrapper) {
    carouselWrapper.addEventListener('mouseenter', () => {
      clearInterval(heroAutoScrollInterval);
    });

    carouselWrapper.addEventListener('mouseleave', () => {
      startAutoScroll();
    });
  }

  // Initialize
  updateHeroCarousel();
  startAutoScroll();

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevHeroSlide();
      resetAutoScroll();
    }
    if (e.key === 'ArrowRight') {
      nextHeroSlide();
      resetAutoScroll();
    }
  });
</script>
